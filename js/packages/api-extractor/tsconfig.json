{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "stripInternal": false,
    "removeComments": false,
  },
  "ts-node": {"transpileOnly": true},
}